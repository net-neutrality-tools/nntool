<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:layout_gravity="fill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- ################################################################################### -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_statusname" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/project_status" />

            </LinearLayout>

            <!-- ################################################################################### -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rtt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_rttname" />

                <TextView
                    android:id="@+id/rtt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/project_status" />
            </LinearLayout>

            <!-- ################################################################################### -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/download_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_downloadname" />

                <TextView
                    android:id="@+id/download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/project_status" />
            </LinearLayout>

            <!-- ################################################################################### -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/upload_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_uploadname" />

                <TextView
                    android:id="@+id/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/project_status" />
            </LinearLayout>

            <!-- ################################################################################### -->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="textMultiLine|textFilter|textNoSuggestions"
                    android:textSize="11sp" />

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="vertical">

                <!--  ======================================================================== -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP Version" />

                    <RadioGroup
                        android:id="@+id/radioGroupIP"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButtonIPAuto"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/name_msetting_auto"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/radioButtonIPV4"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="@string/name_msetting_ipv4"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/radioButtonIPV6"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="@string/name_msetting_ipv6"
                            android:textSize="10sp" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single Stream" />

                    <RadioGroup
                        android:id="@+id/radioGroupST"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButtonSSOff"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/name_msetting_ssoff"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/radioButtonSSOn"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="@string/name_msetting_sson"
                            android:textSize="10sp" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TLS" />

                    <RadioGroup
                        android:id="@+id/radioGroupTLS"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButtonTLSOff"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="@string/name_msetting_tlsoff"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/radioButtonTLSOn"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/name_msetting_tlson"
                            android:textSize="10sp" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- ##################################################################### -->

                    <Button
                        android:id="@+id/buttonStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_msetting_all"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/buttonRTT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_msetting_rtt"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/buttonDownload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_msetting_download"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/buttonUpload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_msetting_upload"
                        android:textSize="12sp" />

                    <!-- ##################################################################### -->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
