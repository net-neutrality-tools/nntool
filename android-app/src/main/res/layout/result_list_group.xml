<LinearLayout android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle_fill">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <at.alladin.nettest.nntool.android.app.view.AlladinTextView
                android:layout_margin="1dp"
                android:id="@+id/result_list_group_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ifont_hourglass"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_margin="1dp"
                android:id="@+id/result_list_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network"/>
        </LinearLayout>

        <TextView
            android:layout_margin="1dp"
            android:id="@+id/result_list_group_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description is a long text, with many interesting tidbits that enhance every user's life without question. Some restrictions apply."/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_list_group_item_entries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>
