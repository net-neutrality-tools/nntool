<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/qos_result_detail_qos_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Nettest.Result.QoS.Details.Section"
        />

    <TextView
        android:id="@+id/qos_result_detail_qos_type_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Nettest.Result.QoS.Details.Description"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Nettest.Result.QoS.Details.Section"
        android:text="@string/result_qos_test_list_header"
        />

    <ListView
        android:id="@+id/qos_result_detail_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />

</LinearLayout>